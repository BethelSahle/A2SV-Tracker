
def countSwaps(a):
    
    i=0
    l=len(a)
    count=0
    while i< l:
        j=0
        while j <l-1:
            if a[j]> a[j+1]:
                a[j],a[j+1]=a[j+1],a[j]
                count+=1
            j+=1
        i+=1
    
    print(f"Array is sorted in {count} swaps.")
    print(f"First Element: {a[0]}")
    print(f"Last Element: {a[-1]}")
    
